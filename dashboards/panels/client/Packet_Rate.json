  "targets": [
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "expr": "(count(sum(rate(net_user_rx_packets{username=~\"$username\"}[1m])) by (username)) == 0) * rate(net_interface_rx_packets{iface=\"wg0\"}[1m])",
      "legendFormat": "RX Packets (Total)",
      "refId": "A"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "expr": "(count(sum(rate(net_user_tx_packets{username=~\"$username\"}[1m])) by (username)) == 0) * rate(net_interface_tx_packets{iface=\"wg0\"}[1m])",
      "legendFormat": "TX Packets (Total)",
      "refId": "B"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "expr": "sum(rate(net_user_rx_packets{username=~\"$username\"}[1m])) by (username)",
      "legendFormat": "RX - {{username}}",
      "refId": "C"
    },
    {
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "expr": "sum(rate(net_user_tx_packets{username=~\"$username\"}[1m])) by (username)",
      "legendFormat": "TX - {{username}}",
      "refId": "D"
    }
  ],
  "title": "Packet Rate",
  "type": "timeseries"
